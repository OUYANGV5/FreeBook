<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.WelcomeActivity">
        <me.wangyuwei.particleview.ParticleView
            android:id="@+id/particleview"
            android:background="?attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:pv_background_color="?attr/colorPrimary"
            app:pv_host_text="@string/text_first"
            app:pv_particle_text="@string/text_second"
            app:pv_particle_text_size="16sp"
            app:pv_spread_anim_time="200"
            app:pv_host_text_anim_time="500"
            app:pv_text_anim_time="300"
            app:pv_text_color="#FFF" />
    </FrameLayout>
</layout>
